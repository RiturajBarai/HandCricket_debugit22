<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3">

    <TextView
        android:id="@+id/p1score"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="11dp"
        android:gravity="center"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@+id/p2score"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/p2score"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        android:text="0"
        app:layout_constraintBottom_toTopOf="@+id/aiRun"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <TextView
        android:id="@+id/aiRun"
        android:layout_width="75dp"
        android:layout_height="71dp"
        android:layout_marginTop="75dp"
        android:layout_marginBottom="74dp"
        android:gravity="center"
        android:text="0"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/userStat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/run1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:onClick="onClick1"
        android:text="1"
        app:layout_constraintBottom_toBottomOf="@+id/run2"
        app:layout_constraintEnd_toEndOf="@+id/run4"
        app:layout_constraintStart_toStartOf="@+id/run4"
        app:layout_constraintTop_toTopOf="@+id/run2" />

    <Button
        android:id="@+id/run2"
        android:layout_width="0dp"
        android:layout_height="79dp"
        android:layout_marginBottom="278dp"
        android:onClick="onClick2"
        android:text="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/run6"
        app:layout_constraintStart_toStartOf="@+id/run6" />

    <Button
        android:id="@+id/run4"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:layout_marginStart="96dp"
        android:onClick="onClick4"
        android:text="4"
        app:layout_constraintBottom_toBottomOf="@+id/run6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/run6" />

    <Button
        android:id="@+id/run6"
        android:layout_width="80dp"
        android:layout_height="79dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="25dp"
        android:onClick="onClick6"
        android:text="6"
        app:layout_constraintStart_toEndOf="@+id/run4"
        app:layout_constraintTop_toBottomOf="@+id/run2" />

    <TextView
        android:id="@+id/userStat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="53dp"
        android:gravity="center"
        android:text="TextView"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/run1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:fontFamily="sans-serif-black"
        android:text="YOUR RUNS"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="82dp"
        android:layout_marginEnd="38dp"
        android:fontFamily="sans-serif-black"
        android:text="BOT'S RUNS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>